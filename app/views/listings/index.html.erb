<p id="notice"><%= notice %></p>
<div id="container">
<md-content class="md-padding" layout-xs="column" layout="row" ng-controller = 'FilterCtrl'>
    <div flex-xs flex-gt-xs="30" layout="column">
      <md-card>
        <md-card-title>
          <md-card-title-text>
            <span class="md-subhead">Filter by</span>
          </md-card-title-text>
        </md-card-title>
        <md-card-content>
          <div flex="100" flex-gt-sm="50" layout="column">
            <div>
              <div flex-xs flex="50">
                <md-radio-group ng-model="data.group1">
                <% @categories.each do |category| %>
        
              
                <md-radio-button value="<%=category.first%>" class="md-primary"><%=category.first%></md-radio-button>
          
                
              
              <% end %>
              </md-radio-group>
              </div>

            </div>
          </div>
        </md-card-content>
        <md-card-actions layout="row" layout-align="end center">
          <md-button ng-click="FilterListing()">Filter</md-button>
        </md-card-actions>
      </md-card>
    </div>


    <div flex-xs flex-gt-xs="70" layout="column">
      <md-card>
      <md-content>
      <md-list>

      <% @listings.reverse_each do |listing| %>

 
      <div class='filter <%= Category.find(listing.category_id).name.blank? ? 'Others' : Category.find(listing.category_id).name%>'>
      <md-list-item class="md-3-line" layout-margin layout-padding>
      <div class="md-list-item-text">
        <span class="md-subhead"><%= link_to listing.title, listing_path(id:listing, isApplication: "false")%><br>
          <i class="material-icons">face</i><%= get_poster_name(listing.poster_id) %></span><br><br>

        <span class=".md-body-1"><%= h(listing.description).gsub(/\n/, '<br/>').html_safe %></span><br>
        
        <span class=".md-body-1">
          <i class="material-icons md-24">attach_money</i><%= listing.remuneration %>
        </span><br>
        <span class=".md-body-1"><%= link_to Category.find(listing.category_id).name, category_path(listing.category_id) %>
        </span><br>
        <div class="inline-button apply-button" layout-align="end center">
            <%= link_to "Apply", listing_path(id:listing, isApplication: "true"), class:"md-button md-raised"%>
          </div>
        <!--<md-card-actions layout="row" layout-align="end center">
          
        </md-card-actions>-->
      </div> 
      </md-list-item>
      <md-divider ng-if="!$last" layout="center" class="divider"></md-divider>
      </div>
      <% end %>
      </md-list>
    </md-content>
  </md-card>
    </div>

</md-content>
</div>
<br>
